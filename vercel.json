{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/node_modules/.prisma/client/**",
          "backend/prisma/schema.prisma"
        ]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend$1"
    }
  ]
}
