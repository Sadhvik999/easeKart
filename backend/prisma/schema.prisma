generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id            Int            @id @default(autoincrement())
  name          String
  phone         String         @unique
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  accountType   AccountType    @default(CUSTOMER)
  addresses     Address[]
  cart          Cart?          @relation("UserCart")
  notifications Notification[]
  orders        Order[]
  products      Products[]     @relation("SellerProducts")
}

model Notification {
  id        String   @id @default(uuid()) @db.Char(36)
  userId    Int
  message   String
  read      Boolean  @default(false)
  type      String   @default("INFO")
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])
}

model Products {
  id          String       @id @default(cuid()) @db.Char(25)
  name        String       @db.VarChar(255)
  price       Float
  Category    String?
  imageUrl    String
  description String?
  rating      Float
  createdAt   DateTime?    @default(now())
  updatedAt   DateTime?    @updatedAt
  isDeleted   Boolean      @default(false)
  sellerId    Int?
  tags        String[]
  cartItems   CartItem[]
  orderItems  OrderItems[]
  seller      Users?       @relation("SellerProducts", fields: [sellerId], references: [id])
}

model Cart {
  id        String     @id @default(uuid()) @db.Char(36)
  userId    Int        @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      Users      @relation("UserCart", fields: [userId], references: [id])
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(uuid()) @db.Char(36)
  cartId    String
  productId String   @db.Char(25)
  quantity  Int      @default(1)
  unitPrice Decimal  @db.Decimal(10, 2)
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Products @relation(fields: [productId], references: [id])
}

model Order {
  id              String       @id @default(uuid()) @db.Char(36)
  userId          Int
  status          OrderStatus  @default(PENDING)
  totalAmount     Decimal      @db.Decimal(10, 2)
  addressId       String?      @db.Char(36)
  shippingAddress String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  address         Address?     @relation(fields: [addressId], references: [id])
  user            Users        @relation(fields: [userId], references: [id])
  items           OrderItems[]
}

model OrderItems {
  id        String   @id @default(uuid()) @db.Char(36)
  orderId   String
  productId String   @db.Char(25)
  quantity  Int
  unitPrice Decimal  @db.Decimal(10, 2)
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Products @relation(fields: [productId], references: [id])
}

model Address {
  id          String       @id @default(uuid()) @db.Char(36)
  userId      Int
  label       AddressLabel @default(HOME)
  fullName    String
  phone       String
  streetLine1 String
  streetLine2 String?
  city        String
  state       String
  postalCode  String
  country     String
  isDefault   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        Users        @relation(fields: [userId], references: [id])
  orders      Order[]
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum AddressLabel {
  HOME
  WORK
  OTHER
}

enum AccountType {
  SELLER
  ADMIN
  CUSTOMER
}
